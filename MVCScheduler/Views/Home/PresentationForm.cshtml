@model MVCScheduler.Models.Presentation

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>New presentation</title>
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>Add a new presentation:</h4></div>
        <div class="panel-body">
            <form asp-action="PresentationForm" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="PresNumber">Presentation number:</label>
                    <input class="form-control" asp-for="PresNumber" />
                </div>
                <div class="form-group">
                    <label asp-for="Topic">Topic:</label>
                    <input class="form-control" asp-for="Topic" />
                </div>
                <div class="form-group">
                    <label asp-for="Speaker">Speaker:</label>
                    <input class="form-control" asp-for="Speaker" />
                </div>

                <div class="form-group">
                    <label asp-for="PresDateAndTime">Date and time:</label>
                    <input class="form-control" asp-for="PresDateAndTime" />
                </div>

                <div class="form-group">
                    <label>How long will be your presentation?</label>
                    <select class="form-control" asp-for="PresLength">
                        <option value="">Choose an option</option>
                        <option value="15">15 minutes</option>
                        <option value="30">30 minutes</option>
                        <option value="45">45 minutes</option>
                        <option value="60">1 hour or more</option>
                    </select>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary" type="submit">
                        Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>